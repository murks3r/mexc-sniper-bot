{
  "name": "mexc-sniper-bot",
  "version": "0.1.0",
  "description": "MEXC cryptocurrency trading bot with pattern detection and automated sniping execution",
  "scripts": {
    "postinstall": "echo 'Dependencies installed'",
    "dev": "bunx next dev --webpack -p 3008",
    "dev:full": "bun run dev & bunx inngest-cli dev",
    "dev:inngest": "bunx inngest-cli dev",
    "dev:turbo": "next dev -p 3008",
    "prebuild": "node scripts/ensure-lightningcss.js",
    "build": "bunx next build --webpack",
    "build:webpack": "next build --webpack",
    "test:integration": "USE_REAL_SUPABASE=true vitest --run",
    "start": "next start",
    "lint": "bunx biome check --write",
    "lint:fix": "bunx biome check --fix --unsafe",
    "format": "npx biome format --write .",
    "format:check": "biome check .",
    "organize-imports": "npx biome check --fix --unsafe --only=organizeImports",
    "sync-format": "bun run format && bun run organize-imports",
    "type-check": "tsc --noEmit",
    "test": "bunx vitest --run",
    "test:watch": "bunx vitest --watch",
    "test:coverage": "bunx vitest --coverage",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:debug": "bunx playwright test --debug",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "check-target": "bun run scripts/check-next-target.ts",
    "check-target:sync": "bun run scripts/check-next-target.ts --sync",
    "jobs:run": "bun run scripts/process-jobs.ts",
    "sync-calendar": "bun run scripts/sync-calendar-for-hour.ts",
    "create-test-user": "bun run scripts/create-test-user.ts"
  },
